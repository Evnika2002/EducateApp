@model EducateApp.ViewModels.RegisterViewModel
@{ 
    ViewData["Title"] = "Регистрация";
}
<div class="row justify-content-center">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header text-center"><h3>@ViewData["Title"]</h3></div>
            <div class="card-body">
                <form method="post" asp-controller="Account" asp-action="Register">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input asp-for="Email" palceholder="E-mail" class="form-control">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="LastName" palceholder="Фамилия" class="form-control">
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="FirstName" palceholder="Имя" class="form-control">
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Patronymic" palceholder="Отчество" class="form-control">
                        <span asp-validation-for="Patronymic" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Password" palceholder="Пароль" class="form-control">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="PasswordConfirm" palceholder="Повтарите пароль" class="form-control">
                        <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Зарегистрироваться" class="btn btn-primary btn-blog mt-3" />
                    </div>
                </form>
            </div>
        </div>
     </div>
</div>